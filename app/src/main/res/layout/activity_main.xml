<!--            android:background="@color/colortransparent"-->
<!--            android:onClick="refreshClicked"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:src="@drawable/ic_refresh_black_24dp" />-->
    </LinearLayout>
</RelativeLayout>